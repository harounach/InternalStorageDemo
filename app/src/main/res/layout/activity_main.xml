<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ach.haroun.fujitsu.internalstoragedemo.MainActivity">
    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="22dp"
        />
    <Button
        android:id="@+id/save_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Message"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="saveMessage"
        />
    <Button
        android:id="@+id/load_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Load Message"
        android:onClick="loadMessage"
        />
    <TextView
        android:id="@+id/txt_result_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message goes here"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorAccent"
        />
</LinearLayout>
